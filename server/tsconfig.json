{
  "compilerOptions": {
    "outDir": "./dist",  
    "rootDir": "./src", 
    "target": "ES2019", 
    "module": "commonjs",  
    "esModuleInterop": true,
    "noEmit": false,        
    "noEmitOnError": false,        
    "skipLibCheck": true,           // Omitir verificación de los archivos .d.ts
    "noImplicitAny": false,         // Permitir `any` implícito
    "strict": false,                // Desactivar todas las verificaciones estrictas
    "noUnusedLocals": false,        // Permitir variables no usadas
    "noUnusedParameters": false,    // Permitir parámetros no usados
    "noImplicitReturns": false,     // No exigir retornos explícitos
    "noFallthroughCasesInSwitch": false // No verificar fallas en switch/case
  },
  "include": ["src/**/*"],          // Incluir todos los archivos en src
  "exclude": ["node_modules"],      // Excluir node_modules
  "compileOnSave": false            // Desactivar la compilación automática en guardado
}




